<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Pandoc As A Service - a universal document converter</title>
    
    <!-- Latest compiled and minified Bootstrap CSS -->
    <link rel="stylesheet" href="/convert/js/bootstrap.min.css">
    
    <script src="/convert/js/angular.min.js"></script>
    <script src="/convert/js/app.js"></script>
    
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->    
  </head>
  <body ng-app="myApp">
    <div class="container" ng-controller="AppCtrl">
      <div class="header clearfix">
        <h3 class="text-muted">Pandoc As A Service <small>a universal document converter</small></h3>
      </div>

      <div class="row">
        <div class="col-lg-6">
          <div class="form-group">
            <textarea class="form-control" rows="18" ng-model="input"></textarea>
          </div>
        </div>
        
        <div class="col-lg-6">
          <h4>Conversion</h4>
          <hr/>
          
          <div class="form-group">
            <label for="inputFormat">Input format</label>
            <select class="form-control" id="inputFormat" ng-model="inputFormat">
              <option ng-repeat="inputFormat in inputFormats">{{inputFormat}}</option>
            </select>
          </div>
        
          <div class="form-group">
            <label for="outputFormat">Output format</label>
            <select class="form-control" id="outputFormat" ng-model="outputFormat">
              <option ng-repeat="outputFormat in outputFormats">{{outputFormat}}</option>
            </select>
           </div>
           
	   <div class="form-group">
	     <button class="btn btn-default btn-block" ng-click ="convertPDF(inputFormat, outputFormat, input) ">
		      Convert to PDF
	     </button>
		      <form class="btn btn-default btn-block" action="/convert/download" method="get">
            <button type="submit">Download PDF</button>
          </form>
        </div>
      </div>
      
      <hr/>
      <textarea class="form-control" rows="18" ng-model="output" ng-if="output" readonly></textarea>
      <hr/>
      
    </div>

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="/convert/js/jquery.min.js"></script>
    <!-- Latest compiled and minified Bootstrap JavaScript -->
    <script src="/convert/js/bootstrap.min.js"></script>
  </body>
</html>
